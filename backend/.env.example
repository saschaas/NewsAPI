# Application
APP_NAME="Stock News API"
APP_VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=sqlite:///./data/news.db
SCHEDULER_DB_URL=sqlite:///./data/scheduler.db

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_ANALYSIS=llama3.1
OLLAMA_MODEL_NER=llama3.1
OLLAMA_MODEL_WHISPER=whisper
OLLAMA_TIMEOUT=300

# Processing
MAX_CONCURRENT_FETCHES=3
DATA_RETENTION_DAYS=30
AUTO_DISABLE_THRESHOLD=5
GLOBAL_PAUSE=false

# Paths
DOWNLOADS_DIR=./downloads
DATA_DIR=./data

# Scraping / Anti-Bot
BROWSER_ENGINE=chromium          # chromium, firefox, or webkit
STEALTH_ENABLED=true
HUMAN_BEHAVIOR_ENABLED=true
USER_AGENT_ROTATION=true

# Proxy (optional - leave empty to disable)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_URLS=                      # Comma-separated for rotation

# RSS
RSS_ENABLED=true
RSS_REQUEST_TIMEOUT=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
